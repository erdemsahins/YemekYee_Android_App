<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c00000"
    tools:context=".KayitOl">


    <EditText
        android:id="@+id/editText2_kayitemail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/login_edittext_arka_plan"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="admin@admin.com"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/editText_kayitsifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_kayitsifre"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/login_edittext_arka_plan"
        android:ems="10"
        android:inputType="textPassword"
        android:text="123456"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/button2_kayitol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/editText_sifre"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@+id/editText_sifre"
        android:layout_toStartOf="@+id/editText_sifre"
        app:layout_constraintStart_toStartOf="@+id/editText2_kayitemail"
        app:layout_constraintTop_toTopOf="@+id/editText2_kayitemail"
        app:srcCompat="@drawable/mail"
        tools:ignore="ContentDescription,MissingConstraints,RtlCompat" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:adjustViewBounds="false"

        android:cropToPadding="false"
        android:hapticFeedbackEnabled="false"
        android:isScrollContainer="false"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/editText_kayitsifre"
        app:layout_constraintTop_toTopOf="@+id/editText_kayitsifre"
        app:srcCompat="@drawable/sifre"
        tools:ignore="ContentDescription,MissingConstraints,RtlCompat" />

    <Button
        android:id="@+id/button2_kayitol"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="KayÄ±t Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>